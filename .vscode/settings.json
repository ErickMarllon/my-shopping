{
  "files.associations": {
    ".env*": "dotenv",
    "*.hbs": "handlebars"
  },

  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.formatOnSave": true
  },
  "[hbs]": {
    "editor.formatOnSave": false
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "cSpell.language": "en, pt-br",
  "cSpell.words": ["plopfile", "popperjs", "typesync"]
}
